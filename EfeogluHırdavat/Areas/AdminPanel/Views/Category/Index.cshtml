@model IEnumerable<EfeogluHırdavat.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="form">
    <div class="formheader">
        Kategoriler
    </div>
    <div style="padding:15px 0px 10px 10px;">
        <a href="@Url.Action("Create","Category")" class="linkbutton">Kategori Ekle</a>
    </div>
    <div class="formcontent">
        <table class="listtable" cellpadding="0" cellspacing="0">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Durum</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.ID)</td>
                    <td>@Html.DisplayFor(model => item.Name)</td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <span>Aktif Kategori</span>
                        }
                        else
                        {
                            <span>Pasif Kategori</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Category", new { id= item.ID })" class="listbtn btnduzenle">Düzenle</a>
                        <a href="@Url.Action("Delete","Category", new {id = item.ID})" class="listbtn btnsil">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
