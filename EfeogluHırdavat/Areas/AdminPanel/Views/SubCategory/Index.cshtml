@model IEnumerable<EfeogluHırdavat.Models.SubCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="form">
    <div class="formheader">
        Alt Kategori Yönetim Paneli
    </div>
    <div style="padding:15px 0px 10px 10px;">
        <a href="@Url.Action("Create","SubCategory")" class="linkbutton">Alt Kategori Ekle</a>
    </div>
    <div class="formcontent">
        <table class="listtable" cellpadding="0" cellspacing="0">
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>Kategori</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Durum</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model=> item.ID)</td>
                    <td>@Html.DisplayFor(model=> item.Category.Name)</td>
                    <td>@Html.DisplayFor(model=> item.Name)</td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <span>Aktif Alt Kategori</span>
                        }
                        else
                        {
                            <span class="pasif">Pasif Alt Kategori</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","SubCategory", new {id = item.ID})" class="listbtn btnduzenle">Düzenle</a>
                        <a href="@Url.Action("Delete","SubCategory", new {id = item.ID})" class="listbtn btnsil">Sil</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

